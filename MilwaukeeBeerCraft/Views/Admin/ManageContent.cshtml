
@{
    ViewBag.Title = "ManageContent";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<html>
<head>
    <title>Manage Posts, Categories and Tags</title>

    <!-- jquery library -->
    <script src="http://code.jquery.com/jquery-1.12.4.js"></script>

    <!-- jquery ui library -->
    <script src="http://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link href="@Url.Content("~/Content/Themes/jquery-ui-1.12.1.custom/jquery-ui.min.css")" rel="stylesheet" />

    <!-- jqgrid -->
    <link href="@Url.Content("~/Content/ui.jqgrid.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jqGrid/jquery.jqGrid.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jqGrid/grid.locale-en.js")"></script>

    <!-- tinyMCE -->
    <script src="@Url.Content("~/Scripts/tinymce/tinymce.js")"></script>

    <script src="@Url.Content("~/Scripts/admin.js")"></script>

</head>
<body>

    <h2>Manage Posts, Categories and Tags</h2>

    <!-- tab control -->
    <div id="tabs">
        <ul>
            <li><a href="#tab-posts">Posts</a></li>
            <li><a href="#tab-cats">Categories</a></li>
            <li><a href="#tab-tags">Tags</a></li>
        </ul>

        <div id="tab-posts" class="tab">
            <table id="tablePosts" class="grid"></table>
            <div id="pagerPosts" class="pager">
            </div>
        </div>

        <div id="tab-cats" class="tab">
            <table id="tableCats" class="grid"></table>
            <div id="pagerCats" class="pager">
            </div>
        </div>

        <div id="tab-tags" class="tab">
            <table id="tableTags" class="grid"></table>
            <div id="pagerTags" class="pager">
            </div>
        </div>
    </div>
</body>
</html>