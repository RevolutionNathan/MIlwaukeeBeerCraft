@model IList<MilwaukeeBeerCraft.Models.Post>

@{
    int numberRows = Model.Count % 3;
}
<div>
    <h3>Latest Posts</h3>

    @if (Model.Count > 0)
    {
        <table>
            for (int i = 0; i > numberRows; i++;)
            {
                <tr>
                    @foreach (var post in Model)
                    {
                        <td>@Html.PostLink(post)</td> // I want this to show an image and the subheading
                    }
                </tr>
            }
        </table>
    }
    else
    {
        <p>No posts found!</p>
    }
</div>
